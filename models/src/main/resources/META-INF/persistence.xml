<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">
    <persistence-unit name="ratings-jpa" transaction-type="RESOURCE_LOCAL">
        <non-jta-data-source>jdbc/RatingMetadataDS</non-jta-data-source>

        <class>si.thoughts.ratings.models.entities.RatingMetadataEntity</class>
        <class>si.thoughts.ratings.models.converters.InstantAtributeConverter</class>

        <properties>
            <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
            <property name="javax.persistence.schema-generation.create-source" value="metadata"/>
            <property name="javax.persistence.schema-generation.drop-source" value="metadata"/>
        </properties>
    </persistence-unit>
</persistence>
